# xray-logger (server) .env example
PORT=8080

# 32-byte key, base64-encoded. Generate with: openssl rand -base64 32
ENCRYPTION_KEY_BASE64=REPLACE_ME_BASE64_32B_KEY

# Postgres connection (xray_logger database created by init.sql)
PGHOST=db
PGPORT=5432
PGDATABASE=xray_logger
PGUSER=xraylogger
PGPASSWORD=strong_db_password_here

# лимит тела запроса для /api/v1/logs
BODY_LIMIT=25mb

# Optional: comma-separated node names to accept (leave empty to accept all)
ALLOWED_NODE_NAMES=

# Optional deny lists (lowercased) – matching records will be dropped server-side
DENY_TARGETS=one.one.one.one,dns.google,1.1.1.1
DENY_PORTS=53,853
