# xray-logger (server) .env example
PORT=8080

#true, если за сервером стоит nginx/Cloudflare и нужен клиентский IP из X-Forwarded-For.
#На прокси сервере в загаловках нужно передавать адрес клиента:
#proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
#proxy_set_header X-Real-IP $remote_addr;
TRUST_PROXY=false

# 32-byte key, base64-encoded. Generate with: openssl rand -base64 32
ENCRYPTION_KEY_BASE64=JeQ7i6EsZE58Z16v6LjhPstC742uAhePd6L42eHNfaA=

# Postgres connection (xray_logger database created by init.sql)
PGHOST=db
PGPORT=5432
PGDATABASE=xray_logger
PGUSER=xraylogger
PGPASSWORD=strong_db_password_here

# лимит тела запроса для /api/v1/logs
BODY_LIMIT=25mb

# Optional: comma-separated node names to accept (leave empty to accept all)
ALLOWED_NODE_NAMES=

# Optional deny lists (lowercased) – matching records will be dropped server-side
DENY_TARGETS=one.one.one.one,dns.google,1.1.1.1,8.8.8.8
DENY_PORTS=53,853
